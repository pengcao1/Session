<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <Button
        android:id="@+id/btn_start_recycle"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:text="@string/str_start_recycleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start_integer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:text="@string/start_integer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_recycle" />

    <Button
        android:onClick="startThreadSchedule"
        android:id="@+id/btn_start_thread_schedule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:text="@string/start_thread_schedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_integer" />

</androidx.constraintlayout.widget.ConstraintLayout>
